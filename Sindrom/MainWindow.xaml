<Window x:Class="Sindrom.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sindrom"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="Введите текст"/>
        <TextBox Name="sindrom_txt"  Grid.Row="1" />
        <ComboBox Name="combobox" Grid.Row="2">
            <ComboBoxItem Content="МТК-2"/>
            <ComboBoxItem Content="UTF-8"/>
            <ComboBoxItem Content="CP-866"/>
        </ComboBox>
        <Button Grid.Row="3" Content="Зашифровать" Click="Button_Click" />
        <RichTextBox Grid.Row="4"/>
    </Grid>
</Window>
